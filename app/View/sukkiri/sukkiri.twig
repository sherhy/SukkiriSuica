<template id="tab1.html">
  <ons-page id="Tab1">

    <ons-card>
      <!-- 1個分 -->
      {% for val in res.0 %}
        <ons-list-item>
          <div class="left">
            <img src="{{ val.img }}" alt="Onsen UI" style="width: 40vw">
          </div>
          <p class="center">
            <span class="list-item__title"><font size="3">{{ val.product_name | length > 15 ? val.product_name | slice(0, 15) ~ '…' : val.product_name }}</font></span>
            <br>
            <span class="list-item__subtitle"><font size="5">{{ val.price }}円</font></span>
          </p>
        </ons-list-item>
        {# <br><br> #}
        {#他の商品ボタン#}
        <ons-button onclick="showTemplateDialog()">他の商品</ons-button>
        <template id="dialog.html">
          <ons-dialog cancelable id="my-dialog">
            <div style="text-align: center; padding: 10px;">
              <p>
                <img src="https://monaca.io/img/logos/download_image_onsenui_01.png" alt="Onsen UI" style="width: 40%">
                <span class="list-item__title"><font size="3">かっぱえびせん</font></span>
                <span class="list-item__subtitle"><font size="3">180</font></span>
